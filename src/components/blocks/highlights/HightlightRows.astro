---
// Highlights Section
// ------------
// Description: A section with a multiple text and image rows.

// Components
// - UI
import TextImage from '../basic/TextImage.astro'

// Content
import highlight01 from '../../../assets/highlights/highlight-01.svg'
import highlight01mobile from '../../../assets/highlights/highlight-01-mobile.svg'
import highlight02 from '../../../assets/highlights/highlight-02.svg'
import highlight02mobile from '../../../assets/highlights/highlight-02-mobile.svg'
import highlight03 from '../../../assets/highlights/highlight-03.svg'
import highlight03mobile from '../../../assets/highlights/highlight-03-mobile.svg'
import highlight04 from '../../../assets/highlights/highlight-04.svg'
import highlight04mobile from '../../../assets/highlights/highlight-04-mobile.svg'

type HighlightBlock = {
	title: string
	text: string
	image: any
	mobileImage?: any
	imageWidth: number
	imageHeight: number
	imagePosition: 'left' | 'right'
}
const highlightBlocks: HighlightBlock[] = [
	{
		title: 'Transform Your Workflow <strong>Workflow</strong>',
		text: 'Partner with our DevOps agency to bring your own pipeline, leveraging tools like GitHub Actions,Jenkins, GitLab CI/CD, CircleCI, TravisCI, or command-line tools.',
		image: highlight01,
		imageWidth: highlight01.width,
		imageHeight: highlight01.height,
		mobileImage: highlight01mobile,
		imagePosition: 'right'
	},
	{
		title: 'Broad <strong>Tooling</strong> Expertise',
		text: "Our agency supports a wide range of DevOps tools, including Docker, Kubernetes, Ansible, Terraform, CloudFormation, and more. We're equipped to handle your unique toolset.",
		image: highlight02,
		mobileImage: highlight02mobile,
		imageWidth: highlight02.width,
		imageHeight: highlight02.height,
		imagePosition: 'left'
	},
	{
		title: 'Seamless <strong>Multi-Cloud</strong> Management',
		text: "Optimize your multi-cloud strategy with our advanced tools, designed to integrate and oversee multiple cloud environments seamlessly. Gain unified visibility into your cloud operations through customizable dashboards, real-time monitoring, and detailed reporting. Effortlessly manage resources, track performance, and enhance cost-efficiency, all while receiving 24/7 expert support to ensure smooth and efficient operations across your entire multi-cloud infrastructure.",
		image: highlight03,
		mobileImage: highlight03mobile,
		imageWidth: highlight03.width,
		imageHeight: highlight03.height,
		imagePosition: 'right'
	},
	{
		title: 'Advanced <strong>Observability </strong>and <strong>Security</strong>',
		text: 'Elevate your operational efficiency with our integrated observability and security solutions. Gain comprehensive insights through real-time monitoring and customizable dashboards that track performance metrics and detect anomalies. Simultaneously, safeguard your infrastructure with robust security measures, including advanced threat detection and real-time monitoring to protect against vulnerabilities. Benefit from detailed reporting, advanced visualization, and continuous expert support to ensure optimal performance and security across your entire infrastructure.',
		image: highlight04,
		mobileImage: highlight04mobile,
		imageWidth: highlight04.width,
		imageHeight: highlight04.height,
		imagePosition: 'left'
	}
]
---

{
	highlightBlocks.map((highlight, key) => (
		<TextImage
			id={`highlight-${key}`}
			title={highlight.title}
			text={highlight.text}
			image={highlight.image}
			imageWidth={highlight.imageWidth}
			imageHeight={highlight.imageHeight}
			mobileImage={highlight.mobileImage}
			imagePosition={highlight.imagePosition}
			classes={key === 0 ? '!pb-0' : key === highlightBlocks.length - 1 ? '!pt-0' : '!py-0'}
		/>
	))
}
